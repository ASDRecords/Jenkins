pipeline {
    agent any
    stages {
        stage ('Run Load Test') {
            input {
                message "please enter values"
                ok "Ok"
                submitter "no matter"
                parameters {
                    string(name: 'duration', defaultValue: '90')
                    string(name: 'users', defaultValue: '10')
                    string(name: 'rampUp', defaultValue: '2')
                }
            }
            steps {
                echo 'Starting test with Jmeter'
                bat """
                 CALL C:\\Users\\vdiaconu\\apache-jmeter-5.3\\bin\\jmeter.bat -n -t C:\\Users\\vdiaconu\\WORK\\JMeter\\Testrun.jmx ^
	        	-Jduration=${duration} -Jusers=${users} -jrampUp=${rampUp} -Jjmeterengine.force.system.exit=true
                """
                echo 'Test completed da da  '
            }
        }
    }
}
